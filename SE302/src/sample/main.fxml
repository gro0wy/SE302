<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="mainPanel" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="sample.Controller">
    <top>
        <MenuBar>
            <Menu text="Collection">
                <items>
                    <MenuItem onAction="#showAddCollectionDialog" text="Add Collection" />
                </items>
                <items>
                    <MenuItem onAction="#showEditCollectionDialog" text="Edit Collection" />
                </items>
                <items>
                    <MenuItem text="Delete Collection" onAction="#deleteCollection"/>
                </items>
            </Menu>
            <menus>
                <Menu text="Item">
                    <items>
                        <MenuItem onAction="#showAddItemDialog" text="Add Item" />
                    </items>
                    <items>
                        <MenuItem onAction="#showEditItemDialog" text="Edit Item" />
                    </items>
                    <items>
                        <MenuItem text="Delete Item" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <TableView fx:id="itemTable">
            <columns>
                <TableColumn text="First Field">
                    <cellValueFactory>
                        <PropertyValueFactory property="firstField" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Second Field">
                    <cellValueFactory>
                        <PropertyValueFactory property="secondField" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Third Field">
                    <cellValueFactory>
                        <PropertyValueFactory property="thirdField" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Fourth Field">
                    <cellValueFactory>
                        <PropertyValueFactory property="fourthField" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
    <left>
    <ListView fx:id="collectionListView">

    </ListView>
    </left>
</BorderPane>
